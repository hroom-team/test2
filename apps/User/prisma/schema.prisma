datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model UserData {
  id                 String   @id @default(cuid())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  userId             String?
  email              String?
  telegramId         String?
  role               String?
  department         String?
  location           String?
  company            String?
  languagePreference String?
  personalProfile    Json?
}
